{
  "name": "@akashic/akashic-pdi",
  "version": "1.10.3",
  "description": "Interface definition for Akashic Platform Dependent Implementation (PDI) Layer",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "gulp compile",
    "test": "gulp && gulp test && npm run lint",
    "doc": "gulp typedoc",
    "prepublish": "npm run build",
    "lint": "npm run lint:tslint && npm run lint:textlint && npm run lint:md",
    "lint:tslint": "tslint --type-check -c tslint.json --project ./tsconfig.json",
    "lint:textlint": "textlint -f pretty-error ./README.md",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/akashic-pdi.git"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "devDependencies": {
    "del": "^2.2.0",
    "gulp": "^3.9.0",
    "gulp-shell": "^0.5.1",
    "gulp-tslint": "^4.3.1",
    "gulp-typedoc": "~2.0.2",
    "remark-cli": "~2.0.0",
    "remark-lint": "~5.0.1",
    "textlint": "^5.2.0",
    "textlint-rule-max-ten": "^2.0.1",
    "textlint-rule-no-mix-dearu-desumasu": "^1.4.0",
    "textlint-rule-prh": "^2.2.1",
    "tslint": "~5.4.3",
    "typedoc": "^0.5.1",
    "typescript": "~2.1.6"
  },
  "dependencies": {
    "@akashic/akashic-engine": "~1.12.0",
    "@akashic/amflow": "~0.2.4",
    "@akashic/playlog": "~1.3.2"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
